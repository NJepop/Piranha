@model Piranha.Models.Manager.SettingModels.UserEditModel
@{
    ViewBag.Selected = "Settings" ;
}
@section Toolbar {
<div class="grid_12 toolbar">
    <div class="inner">
        <ul>
            <li><a class="save submit" title="Spara användaren"></a></li>
            <li><a href="@Url.Action("DeleteUser", new { id = Model.User.Id })" class="delete" title="Ta bort mallen"></a></li>
            <li><a href="@Url.Action("Index")#users" class="back" title="Backa"></a></li>
            <li><a href="" class="refresh" title="Ladda om användaren"></a></li>
            <li><a href="" class="info" title="Visa information & hjälptext"></a></li>
        </ul>
        <div class="clear"></div>
    </div>
</div>
}
@{ Html.BeginForm() ; }
@Html.HiddenFor(m => m.User.Id)
@Html.HiddenFor(m => m.User.IsNew)
@Html.HiddenFor(m => m.User.Created)
@Html.HiddenFor(m => m.User.CreatedBy)
@Html.HiddenFor(m => m.Password.Id)
@Html.HiddenFor(m => m.Password.IsNew)
<div class="grid_9">
    <div class="box">
        <div class="inner">
            <h2>Användaruppgifter</h2>
            <ul class="form">
                <li>
                    @Html.LabelFor(m => m.User.Login)
                    <div class="input">
                        @Html.TextBoxFor(m => m.User.Login)</div>
                    @Html.ValidationMessageFor(m => m.User.Login)
                </li>
                <li>
                    @Html.LabelFor(m => m.User.Firstname)
                    <div class="input">
                        @Html.TextBoxFor(m => m.User.Firstname)</div>
                    @Html.ValidationMessageFor(m => m.User.Firstname)
                </li>
                <li>
                    @Html.LabelFor(m => m.User.Surname)
                    <div class="input">
                        @Html.TextBoxFor(m => m.User.Surname)</div>
                    @Html.ValidationMessageFor(m => m.User.Surname)
                </li>
                <li>
                    @Html.LabelFor(m => m.User.Email)
                    <div class="input">
                        @Html.TextBoxFor(m => m.User.Email)</div>
                    @Html.ValidationMessageFor(m => m.User.Email)
                </li>
                <li>
                    @Html.LabelFor(m => m.User.GroupId)
                    <div class="input">
                        @Html.DropDownListFor(m => m.User.GroupId, Model.Groups)</div>
                </li>
            </ul>
        </div>
    </div>
</div>
<div class="grid_3">
    <div class="box">
        <div class="inner">
            <h2>@ViewBag.SubTitle</h2>
            <ul class="form">
                <li>
                    @Html.Label("Lösenord")
                    <div class="input">
                        @Html.PasswordFor(m => m.Password.Password)</div>
                </li>
                <li>
                    @Html.Label("Bekräfta")
                    <div class="input">
                        @Html.PasswordFor(m => m.Password.PasswordConfirm)</div>
                    @Html.ValidationMessageFor(m => m.Password.PasswordConfirm)
                </li>
            </ul>
            <a href="@Url.Action("GeneratePassword", "Settings", new { @id = Model.Password.Id })" class="btn orange">Generera lösenord</a>
        </div>
    </div>
</div>
@{ Html.EndForm() ; }